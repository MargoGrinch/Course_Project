            }
            if(event.type == Event::MouseButtonPressed && event.key.code == Mouse::Left &&
                    x >= 453 && x <= 517 && y >= 138 && y <= 202 ){
                Event numberEvent;
                while (1) {
                    window.pollEvent(numberEvent);
                    Vector2i pos1 = Mouse::getPosition(window);
                    int x1 = pos1.x;
                    int y1 = pos1.y;
                    if(numberEvent.type == Event::MouseButtonPressed && numberEvent.key.code == Mouse::Left
                            && (x1 < 453 || x1 > 517 || y1 < 138 || y1 > 202)){
                        printf("numberEvent\n");
                        break;
                    }
                    if(numberEvent.type == Event::KeyPressed){
                        if(numberEvent.key.code == Keyboard::Num1 || numberEvent.key.code == Keyboard::Numpad1)
                        {
                            B_printNumber2(1, window);
                        } else if(numberEvent.key.code == Keyboard::Num2 || numberEvent.key.code == Keyboard::Numpad2)
                        {
                            B_printNumber2(2, window);
                        } else if(numberEvent.key.code == Keyboard::Num3 || numberEvent.key.code == Keyboard::Numpad3)
                        {
                            B_printNumber2(3, window);
                        } else if(numberEvent.key.code == Keyboard::Num4 || numberEvent.key.code == Keyboard::Numpad4)
                        {
                            B_printNumber2(4, window);
                        } else if(numberEvent.key.code == Keyboard::Num5 || numberEvent.key.code == Keyboard::Numpad5)
                        {
                            B_printNumber2(5, window);
                        } else if(numberEvent.key.code == Keyboard::Num6 || numberEvent.key.code == Keyboard::Numpad6)
                        {
                            B_printNumber2(6, window);
                        } else if(numberEvent.key.code == Keyboard::Num7 || numberEvent.key.code == Keyboard::Numpad7)
                        {
                            B_printNumber2(7, window);
                        } else if(numberEvent.key.code == Keyboard::Num8 || numberEvent.key.code == Keyboard::Numpad8)
                        {
                            B_printNumber2(8, window);
                        } else if(numberEvent.key.code == Keyboard::Num9 || numberEvent.key.code == Keyboard::Numpad9)
                        {
                            B_printNumber2(9, window);
                        } else if(numberEvent.key.code == Keyboard::Num0 || numberEvent.key.code == Keyboard::Numpad0)
                        {
                            B_printNumber2(0, window);
                        } else if(numberEvent.key.code == Keyboard::BackSpace)
                        {
                            B_deleteDigit2(window);
                        }
                    }
                }
            }
            if(event.type == Event::MouseButtonPressed && event.key.code == Mouse::Left &&
                    x >= 380 && x <= 444 && y >= 182 && y <= 246 ){
                Event numberEvent;
                while (1) {
                    window.pollEvent(numberEvent);
                    Vector2i pos1 = Mouse::getPosition(window);
                    int x1 = pos1.x;
                    int y1 = pos1.y;
                    if(numberEvent.type == Event::MouseButtonPressed && numberEvent.key.code == Mouse::Left
                            && (x1 < 380 || x1 > 444 || y1 < 182 || y1 > 246)){
                        printf("numberEvent\n");
                        break;
                    }
                    if(numberEvent.type == Event::KeyPressed){
                        if(numberEvent.key.code == Keyboard::Num1 || numberEvent.key.code == Keyboard::Numpad1)
                        {
                            B_printNumber3(1, window);
                        } else if(numberEvent.key.code == Keyboard::Num2 || numberEvent.key.code == Keyboard::Numpad2)
                        {
                            B_printNumber3(2, window);
                        } else if(numberEvent.key.code == Keyboard::Num3 || numberEvent.key.code == Keyboard::Numpad3)
                        {
                            B_printNumber3(3, window);
                        } else if(numberEvent.key.code == Keyboard::Num4 || numberEvent.key.code == Keyboard::Numpad4)
                        {
                            B_printNumber3(4, window);
                        } else if(numberEvent.key.code == Keyboard::Num5 || numberEvent.key.code == Keyboard::Numpad5)
                        {
                            B_printNumber3(5, window);
                        } else if(numberEvent.key.code == Keyboard::Num6 || numberEvent.key.code == Keyboard::Numpad6)
                        {
                            B_printNumber3(6, window);
                        } else if(numberEvent.key.code == Keyboard::Num7 || numberEvent.key.code == Keyboard::Numpad7)
                        {
                            B_printNumber3(7, window);
                        } else if(numberEvent.key.code == Keyboard::Num8 || numberEvent.key.code == Keyboard::Numpad8)
                        {
                            B_printNumber3(8, window);
                        } else if(numberEvent.key.code == Keyboard::Num9 || numberEvent.key.code == Keyboard::Numpad9)
                        {
                            B_printNumber3(9, window);
                        } else if(numberEvent.key.code == Keyboard::Num0 || numberEvent.key.code == Keyboard::Numpad0)
                        {
                            B_printNumber3(0, window);
                        } else if(numberEvent.key.code == Keyboard::BackSpace)
                        {
                            B_deleteDigit3(window);
                        }
                    }
                }
            }
            if(event.type == Event::MouseButtonPressed && event.key.code == Mouse::Left &&
                    x >= 453 && x <= 521 && y >= 182 && y <= 246 ) {
                Event numberEvent;
                while (1) {
                    window.pollEvent(numberEvent);
                    Vector2i pos1 = Mouse::getPosition(window);
                    int x1 = pos1.x;
                    int y1 = pos1.y;
                    if(numberEvent.type == Event::MouseButtonPressed && numberEvent.key.code == Mouse::Left
                            && (x1 < 453 || x1 > 521 || y1 < 182 || y1 > 246)){
                        printf("numberEvent\n");
                        break;
                    }
                    if(numberEvent.type == Event::KeyPressed){
                        if(numberEvent.key.code == Keyboard::Num1 || numberEvent.key.code == Keyboard::Numpad1)
                        {
                            B_printNumber4(1, window);
                        } else if(numberEvent.key.code == Keyboard::Num2 || numberEvent.key.code == Keyboard::Numpad2)
                        {
                            B_printNumber4(2, window);
                        } else if(numberEvent.key.code == Keyboard::Num3 || numberEvent.key.code == Keyboard::Numpad3)
                        {
                            B_printNumber4(3, window);
                        } else if(numberEvent.key.code == Keyboard::Num4 || numberEvent.key.code == Keyboard::Numpad4)
                        {
                            B_printNumber4(4, window);
                        } else if(numberEvent.key.code == Keyboard::Num5 || numberEvent.key.code == Keyboard::Numpad5)
                        {
                            B_printNumber4(5, window);
                        } else if(numberEvent.key.code == Keyboard::Num6 || numberEvent.key.code == Keyboard::Numpad6)
                        {
                            B_printNumber4(6, window);
                        } else if(numberEvent.key.code == Keyboard::Num7 || numberEvent.key.code == Keyboard::Numpad7)
                        {
                            B_printNumber4(7, window);
                        } else if(numberEvent.key.code == Keyboard::Num8 || numberEvent.key.code == Keyboard::Numpad8)
                        {
                            B_printNumber4(8, window);
                        } else if(numberEvent.key.code == Keyboard::Num9 || numberEvent.key.code == Keyboard::Numpad9)
                        {
                            B_printNumber4(9, window);
                        } else if(numberEvent.key.code == Keyboard::Num0 || numberEvent.key.code == Keyboard::Numpad0)
                        {
                            B_printNumber4(0, window);
                        } else if(numberEvent.key.code == Keyboard::BackSpace)
                        {
                            B_deleteDigit4(window);
                        }
                    }
                }
            }
//for B_matrix
        }
    }
}
/*for A_matrix*/
void A_printNumber1(int number, RenderWindow& window){
    window.clear(Color::White);
    A_matrix[0][0] = A_matrix[0][0]*10 + number;
    drawAll(window);
}
void A_deleteDigit1(RenderWindow& window){
    window.clear(Color::White);
    A_matrix[0][0] /= 10;
    drawAll(window);
}

void A_printNumber2(int number, RenderWindow& window){
    window.clear(Color::White);
    A_matrix[0][1] = A_matrix[0][1]*10 + number;
    drawAll(window);
}
void A_deleteDigit2(RenderWindow& window){
    window.clear(Color::White);
    A_matrix[0][1] /= 10;
    drawAll(window);
}
void A_printNumber3(int number, RenderWindow& window){
    window.clear(Color::White);
    A_matrix[1][0] = A_matrix[1][0]*10 + number;
    drawAll(window);
}
void A_deleteDigit3(RenderWindow& window){
    window.clear(Color::White);
    A_matrix[1][0] /= 10;
    drawAll(window);
}
void A_printNumber4(int number, RenderWindow& window){
    window.clear(Color::White);
    A_matrix[1][1] = A_matrix[1][1]*10 + number;
    drawAll(window);
}
void A_deleteDigit4(RenderWindow& window){
    window.clear(Color::White);
    A_matrix[1][1] /= 10;
    drawAll(window);
}
/*for A_matrix*/

